.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:revisions, :index)
      %li=link_to pat(:new), url(:revisions, :new)
      %li.active=link_to pat(:edit), url(:revisions, :edit, :id => @revision.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:revision)
    .inner
      -form_for :revision, url(:revisions, :update, :id => @revision.id), :method => :put, :class => :form do |f|
        =partial "revisions/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
