.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:articles, :index)
      %li=link_to pat(:new), url(:articles, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:articles)
    .inner
      %table.table
        %tr
          %th.first=mat(:article, :id)
          %th=mat(:article, :enabled)
          %th=mat(:article, :published)
          %th=mat(:article, :publish_at)
          %th=mat(:article, :published_at)
          %th=mat(:article, :revision_id)
          %th=mat(:article, :state_id)
          %th.last="&nbsp;"
        -@articles.each do |article|
          %tr
            %td.first=article.id
            %td=article.enabled
            %td=article.published
            %td=article.publish_at
            %td=article.published_at
            %td=article.revision_id
            %td=article.state_id
            %td.last
              =button_to pat(:edit), url(:articles, :edit, :id => article.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:articles, :destroy, :id => article.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
